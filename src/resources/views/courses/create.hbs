<div class="mt">
    <h3>Đăng khóa học</h3>
    <form method="post" action="/courses/store">
        <div class="form-group">
            <label for="name">Nhập tên khóa học</label>
            <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="nhập khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="name">Video ID</label>
            <input type="text" name="videoId" class="form-control" id="exampleFormControlInput1" placeholder="Nhập videoID">
        </div>
        <div class="form-group">
            <label for="name">Trình độ</label>
            <input type="text" name="level" class="form-control" id="exampleFormControlInput1" placeholder="Nhập level">
        </div>
        <button type="submit" class="btn btn-primary">Đăng khóa học</button>
    </form>
</div>